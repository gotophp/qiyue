.container {
  padding: 42rpx 0rpx 34rpx 28rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: white;
}
.title {
  width: 694rpx;
  height: 90rpx;
}
.scroll-view {
  margin-top: 28rpx;
  box-sizing: border-box;
  margin-right:28rpx;
}
.inner {
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  align-items: center;
}
.price-unit {
  font-size: 32rpx !important;
}
.price-value {
  font-size: 24rpx !important;
}
.spu-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 60rpx;
}
.spu-container:last-child {
  padding-right: 28rpx;
}
.spu-img {
  width: 160rpx;
  height: 160rpx;
}
.spu-text {
  font-size: 20rpx;
  color: #666666;
  margin-top: 20rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
