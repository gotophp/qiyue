.container{
    display: flex;
    flex-direction: column;
    box-shadow: 0px 0px 8px 0px rgba(119, 163, 149, .2);
    margin-bottom: 30rpx;
    background-color: #ffffff;
    width: 340rpx;
    justify-content: center;
}
.content-container {
    display: flex;
    flex-direction: column;
    padding: 16rpx 16rpx 22rpx 16rpx;
}
.img {
  width: 100%;
  height: 360rpx;
}
.title {    
    font-size: 28rpx;
    color: #333333; 
}
.tags {
  display: flex;
  flex-direction: row;
  margin-bottom: 8rpx;
  margin-top: 6rpx;
  flex-wrap: wrap;
}
.l-tag {
  background-color: #dcebe6 !important;
  color: #157658 !important;
  height: 36rpx;
  padding-left: 6rpx !important;
  padding-right: 6rpx !important;
  margin-right: 5rpx !important;
}
 .price-row {
   display: flex;
   flex-direction: row;
 }
 .discount-price {
   margin-left: 20rpx;
 }
 .subtitle {
   font-size: 24rpx;
   font-weight: 300;
   margin-top: 6rpx;
   color:#888
 }