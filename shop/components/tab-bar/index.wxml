<view class="container">
	<view class="icons">
		<view bind:tap="onGoToHome">
			<l-icon
			 name="home"
			 sizd="46"
			 l-class='sleeve'
			 color="#157658"
			/>
			<text>首页</text>
		</view>
		<view bind:tap="onGoToCart">
			<l-badge>
                <l-icon name="cart" sizd="40" color="#157658" />
            </l-badge>

			<text>购物车</text>
		</view>
	</view>
	<view bind:tap="onAddToCart" class="cart btn-font">
		<text>购物车</text>
	</view>
	<view bind:tap="onBuy" class="buy btn-font">
		<text>立即购买</text>
	</view>
</view>

