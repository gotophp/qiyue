.container {
    background-color: #ffffff;
    box-sizing: border-box;
    max-height: 1000rpx;
    margin-bottom: 100rpx;
    min-height: 700rpx;
}
.out-container {
    padding:30rpx;
}
.sku-img {
    width: 160rpx;
    height: 160rpx;
}
.sku-description {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 40rpx;
}
.discount-price {
    margin-left: 20rpx;
}
.sku-preview {
    display: flex;
    flex-direction: row;
}

.price-row{
    display: flex;
    flex-direction: row;
    align-items: center;
}

.hr {
    margin-top: 30rpx;
    width: 690rpx;
    height: 2rpx;
    background-color: #e9e9e9;
}
.sku-pending {
    font-size: 22rpx;
}
.sku-pending >text:first-child {
    color: #999999;
}
.sku-pending >text:last-child {
    color: #666666;
}
.stock {
    margin-left: 30rpx;
    font-size: 20rpx;
    color: #999999;
}
.stock-pinch {
    margin-left: 30rpx;
    font-size: 20rpx;
    color: #D20109;
}
.counter-container {
    margin-top: 24rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding-bottom: 200rpx;
}
.counter-container text {
    color: #555555;
    font-size: 24rpx;
}
.bottom-btn {
    display: flex;
    justify-content: center;
    flex-direction: row;
    align-items: center;
    width: 100%;
    height: 100rpx;
    background-color: #333333;
    position: absolute;
    bottom: 0;
}
.out-stock {
    background-color: #DCE8E6;
}
.bottom-btn text{
    color: #ffffff;
}